---
import "../styles/globa.css"
const {title, description} = Astro.props;
---

<div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100 hover:shadow-xl hover:border-primary/20 transition-all duration-300 group">
  <div class="w-12 h-1 bg-gradient-to-r from-primary to-blue-600 rounded-full mb-4 group-hover:from-blue-600 group-hover:to-primary transition-all duration-300"></div>
  <h3 class="text-xl font-bold mb-4 text-gray-800 group-hover:text-primary transition-colors duration-300">{title}</h3>
  <p class="text-gray-600 leading-relaxed">{description}</p>
</div>