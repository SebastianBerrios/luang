---
import "../styles/globa.css"
import { Image } from 'astro:assets';
const { image, name, description } = Astro.props;
---

<div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 group border border-gray-100 hover:border-primary/20">
  <div class="overflow-hidden">
    <Image src={image} alt={name} class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110" width={600}
    height={400}/>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2 text-gray-800 group-hover:text-primary transition-colors duration-300">{name}</h3>
    <p class="text-gray-600 mb-4 leading-relaxed">{description}</p>
    <a href="/contact"
      class="inline-block bg-gradient-to-r from-primary to-blue-700 text-white px-6 py-2.5 rounded-lg hover:from-blue-700 hover:to-primary transition-all duration-300 shadow-md hover:shadow-lg font-semibold transform hover:scale-105"
    >
      Solicitar cotizaci√≥n
    </a>
  </div>
</div>
