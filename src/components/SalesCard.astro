---
import "../styles/globa.css"
import { Image } from 'astro:assets';
const { image, name, description } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-lg">
  <Image src={image} alt={name} class="w-full h-64 object-cover" width={600}
  height={400}/>
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{name}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <button
      class="bg-blue-900 text-white px-6 py-2 rounded-md hover:bg-blue-800 transition duration-300"
    >
      Descargar Cat√°logo
    </button>
  </div>
</div>
