---
import "../styles/globa.css"
import { Image } from "astro:assets";
const { description, image } = Astro.props;
---

<div
  class="group overflow-hidden rounded-xl bg-white shadow-lg border border-gray-100 hover:shadow-xl hover:border-primary/20 transition-all duration-300"
>
  <div class="relative overflow-hidden aspect-3/2">
    <Image
      src={image}
      alt={description}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      width={600}
      height={400}
      loading="lazy"
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
    />
  </div>
  <div class="p-5">
    <h3 class="text-base font-semibold text-gray-800 leading-snug group-hover:text-primary transition-colors duration-300">
      {description}
    </h3>
  </div>
</div>
