---
import "../styles/globa.css"
import { Icons, type IconKeys } from "../data/icons.ts";

interface Props {
    icon: IconKeys,
    name: string,
    description: string,
    color: string
}

const {icon, name, description, color} = Astro.props

const IconComponent = Icons[icon] || null;

// Map color names to Tailwind CSS classes
const colorClasses = {
  blue: "text-blue-600",
  green: "text-green-600", 
  red: "text-red-600"
};

const iconColorClass = colorClasses[color as keyof typeof colorClasses] || "text-gray-600";

const colorClassesBg = {
  blue: "bg-blue-100",
  green: "bg-green-100", 
  red: "bg-red-100"
};

const iconColorClassBg = colorClassesBg[color as keyof typeof colorClassesBg] || "bg-gray-100";
---


<div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 hover:shadow-xl hover:border-primary/20 transition-all duration-300 group">
    <div class={`${iconColorClassBg} w-16 h-16 rounded-xl flex items-center justify-center mx-auto mb-5 group-hover:scale-110 transition-transform duration-300`}>
    {IconComponent && <IconComponent class={`${iconColorClass} w-8 h-8`} />}
    </div>
    <h3 class="text-lg font-bold text-center mb-3 text-gray-800 group-hover:text-primary transition-colors duration-300">{name}</h3>
    <p class="text-gray-600 text-sm text-center mb-4 leading-relaxed">
      {description}
    </p>
    <div class="text-center">
      <span class="inline-block bg-linear-to-r from-green-500 to-green-600 text-white text-sm px-4 py-1.5 rounded-full font-semibold shadow-md">
        Vigente
      </span>
    </div>
</div>