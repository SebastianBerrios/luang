---
import "../styles/globa.css"
import { Icons, type IconKeys } from "../data/icons.ts";

interface Props {
    icon: IconKeys,
    title: string,
    description: string,
    itemList: string[]
}

const {icon, title, description, itemList} = Astro.props

const IconComponent = Icons[icon] || null;
---

<div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition duration-300">
    {IconComponent && <IconComponent class="text-4xl text-primary mb-4 size-16" />}
    <h3 class="text-2xl font-bold mb-4">{title}</h3>
    <p class="text-gray-600 mb-6">{description}</p>
    <ul class="space-y-2 text-gray-600 list-disc ml-6">
        {itemList.map((item) => (
        <li>{item}</li>
        ))}
    </ul>
  </div>