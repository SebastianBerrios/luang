---
import { Image } from 'astro:assets';

interface Props {
  name: string;
  logo: string;
}

const { name, logo } = Astro.props;
---

<article 
  class="group bg-white p-4 md:p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-primary/30 transform hover:scale-105"
  aria-label={`Cliente: ${name}`}
>
  <div class="flex items-center justify-center h-24 md:h-32">
    <Image
      src={logo}
      alt={`Logo de ${name}`}
      width={200}
      height={100}
      loading="lazy"
      decoding="async"
      class="max-w-full max-h-full object-contain grayscale group-hover:grayscale-0 transition-all duration-300"
      format="webp"
      quality={80}
    />
  </div>
  <p class="sr-only">{name}</p>
</article>