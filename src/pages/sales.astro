---
import "../styles/globa.css"
import { saleEquipment, benefitsBuyingUs } from "../data/sales";
import Layout from "../layouts/Layout.astro";
import FeatureCard from "../components/FeatureCard.astro";
import SalesCard from "../components/SalesCard.astro";
import Banner from "../components/Banner.astro";
import sales from "/public/images/hero/sales.webp";
---

<Layout>
  <Banner
    title="Venta de equipos ElÃ©ctricos"
    description="Conoce los equipos que tenemos en venta y los beneficios de comprar con nosotros."
    image={sales}
  />
  <section class="container mx-auto px-4 pt-20 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {saleEquipment.map((equipment) => <SalesCard {...equipment} />)}
      </div>
    </div>
  </section>
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex items-center justify-center mb-8">
        <div class="w-16 h-1 bg-gradient-to-r from-primary to-blue-600 rounded-full"></div>
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-gray-800">
        Beneficios de Comprar con Nosotros
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {benefitsBuyingUs.map((benefit) => <FeatureCard {...benefit} />)}
      </div>
    </div>
  </section>
</Layout>
