      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </section>
</Layout>

<script is:inline>
  document
    .getElementById("contactForm")
    .addEventListener("submit", async (e) => {
      e.preventDefault();
      const form = e.target;

      try {
        const response = await fetch(form.action, {
          method: form.method,
          body: new FormData(form),
          headers: {
            Accept: "application/json",
          },
        });

        if (response.ok) {
          form.reset();
          window.location.href = "/";
        } else {
          alert(
            "Hubo un error al enviar el mensaje. Por favor, int√©ntelo de nuevo."
          );
        }
      } catch (error) {
        alert("Error de red. Por favor, verifique su conexi√≥n.");
      }
    });
</script>
