---
import "../styles/globa.css"
import { services } from "../data/services";
import Layout from "../layouts/Layout.astro";
import ServiceCard from "../components/ServiceCard.astro";
import Banner from "../components/Banner.astro";
import service from "/public/images/hero/services.webp";
---

<Layout>
  <Banner
    title="Nuestros Servicios"
    description="Soluciones integrales para sus necesidades de construcción e ingeniería"
    image={service}
  />

  <section class="container mx-auto px-4 py-8">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 gap-8">
        {services.map((service) => <ServiceCard {...service} />)}
      </div>
    </div>
  </section>
  <section class="bg-gradient-to-b from-gray-50 to-white py-20">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <div class="flex items-center justify-center mb-8">
        <div class="w-16 h-1 bg-gradient-to-r from-primary to-blue-600 rounded-full"></div>
      </div>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-800">¿Necesita nuestros servicios?</h2>
      <p class="text-xl text-gray-600 mb-8">
        Contáctenos para discutir su próximo proyecto
      </p>
      <a
        href="/contact"
        class="inline-block bg-gradient-to-r from-primary to-blue-700 text-white px-8 py-3 rounded-lg text-lg font-semibold hover:from-blue-700 hover:to-primary transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-105"
      >
        Solicitar Cotización
      </a>
    </div>
  </section>
</Layout>
