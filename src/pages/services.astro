---
import "../styles/globa.css"
import { services } from "../data/services";
import Layout from "../layouts/Layout.astro";
import ServiceCard from "../components/ServiceCard.astro";
import Banner from "../components/Banner.astro";
import service from "/public/images/hero/services.webp";
---

<Layout>
  <Banner
    title="Nuestros Servicios"
    description="Soluciones integrales para sus necesidades de construcción e ingeniería"
    image={service}
  />

  <section class="container mx-auto py-20 bg-white">
    <div class="mx-6">
      <div class="grid grid-cols-1 gap-6 max-w-7xl mx-auto">
        {services.map((service) => <ServiceCard {...service} />)}
      </div>
    </div>
  </section>
  <section class="bg-linear-to-b from-gray-50 to-white py-20">
    <div class="mx-6">
      <div class="flex items-center justify-center mb-8">
        <div class="w-16 h-1 bg-linear-to-r from-primary to-blue-600 rounded-full"></div>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-6 text-gray-800">¿Necesita nuestros servicios?</h2>
      <p class="text-lg text-gray-700 mb-8 text-center max-w-2xl mx-auto">
        Contáctenos para discutir su próximo proyecto
      </p>
      <div class="text-center">
        <a
          href="/contact"
          class="inline-block bg-linear-to-r from-primary to-blue-700 text-white px-6 py-2.5 rounded-lg text-base font-semibold hover:from-blue-700 hover:to-primary transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-105"
        >
          Solicitar Cotización
        </a>
      </div>
    </div>
  </section>
</Layout>
